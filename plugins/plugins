@Client.on_message(filters.private & filters.command(["start"]))
async def start(client: Client, message: Message):
    approvedbot = await client.get_me() 
    button=[[
      InlineKeyboardButton("UPDATES", url="https://t.me/lx0980AI")
      ]]
    await message.reply_text(text="**Hello...тЪб\n\n I'M SIMPLE TELEGRAM AUTO REQUEST ACCEPT BOT**", reply_markup=InlineKeyboardMarkup(button), disable_web_page_preview=True)

@Client.on_chat_join_request(filters.chat(CHAT_ID))
