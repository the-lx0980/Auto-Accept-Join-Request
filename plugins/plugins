    chat=message.chat # Chat
    user=message.from_user # User
    print(f"{user.first_name} ЁЭЩ╣ЁЭЩ╛ЁЭЩ╕ЁЭЩ╜ЁЭЩ┤ЁЭЩ│ тЪб") # Logs
    await client.approve_chat_join_request(chat_id=chat.id, user_id=user.id)
